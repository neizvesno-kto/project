<% layout('./layout/page.ejs') %>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Отзывы</title>
    <link rel="stylesheet" href="/stylesheets/glavn.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .card {
            margin-bottom: 20px;
        }
        .feedback-container {
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Понравилось? Оставьте свой отзыв!</h1>
        <div class="row justify-content-center">
            <form class="col-md-6" action="/otziv" method="post">
                <!-- Скрытое поле для даты, будет заполняться автоматически на сервере -->
                <input type="hidden" id="date" name="date" value="<%= currentDate %>">
                
                <div class="form-group">
                    <label for="rating"><h4>Рейтинг:</h4></label>
                    <select class="form-control" id="rating" name="rating" required>
                        <option value="">Выберите рейтинг</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="comment"><h4>Отзыв:</h4></label>
                    <textarea class="form-control" id="comment" placeholder="Оставьте свой отзыв" name="comment" rows="4" required></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-block" type="submit" value="Оставить отзыв" />
                </div>
            </form>
        </div>

        <div class="feedback-container">
            <h2>Все отзывы</h2>
            <div class="row">
                <% customer_feedback.forEach(function(feedback) { %>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Рейтинг: <%= feedback.rating %></h5>
                                <p class="card-text"><strong>Дата:</strong> <%= feedback.date %></p>
                                <p class="card-text"><strong>Отзыв:</strong> <%= feedback.comment %></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
